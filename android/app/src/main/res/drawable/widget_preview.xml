<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Calendar Icon Background -->
    <item
        android:left="16dp"
        android:top="16dp"
        android:width="72dp"
        android:height="72dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Activity Card -->
    <item
        android:left="16dp"
        android:right="16dp"
        android:top="100dp"
        android:bottom="70dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_light" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primary_border" />
        </shape>
    </item>
    
    <!-- Next Activity Card -->
    <item
        android:left="16dp"
        android:right="16dp"
        android:bottom="16dp"
        android:height="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_grey" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
