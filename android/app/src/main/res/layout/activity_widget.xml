<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header with Mini Calendar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Mini Calendar -->
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:orientation="vertical"
            android:background="@drawable/calendar_background"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/widget_calendar_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Januari"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/widget_calendar_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kegiatan Minggu Ini"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/widget_count_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="+3 kegiatan"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Current Activity Card -->
    <LinearLayout
        android:id="@+id/widget_current_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/activity_card_background"
        android:padding="12dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kerja Bakti Warga"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pembersihan lingkungan bersama"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sen, 28 Jan"
                android:textSize="11sp"
                android:textColor="@color/text_primary"
                android:drawableLeft="@drawable/ic_calendar_small"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/widget_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="08:00"
                android:textSize="11sp"
                android:textColor="@color/text_primary"
                android:drawableLeft="@drawable/ic_time_small"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Balai RT 05"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:drawableLeft="@drawable/ic_location_small"
            android:drawablePadding="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- Next Activity Card (Compact) -->
    <LinearLayout
        android:id="@+id/widget_next_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@drawable/next_activity_background"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/widget_next_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rapat Bulanan RT"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_next_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Rab, 30 Jan â€¢ 19:00"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/widget_empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak ada kegiatan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/widget_empty_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Belum ada kegiatan minggu ini"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

</LinearLayout>
